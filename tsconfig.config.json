{
  "extends": "@tsconfig/node-lts/tsconfig.json",
  "include": [
    "apollo.config.*",
    "histoire.config.*",
    "vite.config.*",
    "vitest.config.*"
  ],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "noUnusedLocals": true,
